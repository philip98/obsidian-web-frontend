<div class="row">
	<h1>Alle Lehrer</h1>
</div>

<div class="row">
	<div class="medium-10 columns">
		{{#link-to 'teachers.new' class='button tiny success radius'}}
			<i class="fi-plus"></i>
		{{/link-to}}
	</div>
	<div class="medium-2 columns">
		{{input type='text' class='search-field radius' value=query placeholder='Suchen'}}
	</div>
</div>

<div class="row">
	<div class="medium-12 columns">
		{{#teacher-list data=searchedData as |t|}}
			{{teacher-entry teacher=t action=(action 'reload')}}
		{{/teacher-list}}
	</div>
</div>