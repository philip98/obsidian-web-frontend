{{#unless isEditing}}
<td>{{alias.name}}</td>
<td class="text-center">
	<button class="button tiny secondary radius no-margin" {{action 'edit'}}>
		<i class="fi-pencil"></i>
	</button>
	<button class="button tiny alert radius no-margin" {{action 'destroy'}}>
		<i class="fi-x"></i>
	</button>
</td>
{{else}}
<td>{{input type='text' class=(if alias.name 'radius no-margin' 'radius error no-margin') placeholder='Name' value=alias.name}}</td>
<td class="text-center">
	<button class="button tiny success radius no-margin" {{action 'saveChanges'}}>
		<i class="fi-check"></i>
	</button>
</td>
{{/unless}}
