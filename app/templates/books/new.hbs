<div class="row">
	<h1>Neues Buch</h1>
</div>

<div class="row">
	<div class="medium-6 medium-offset-3 columns">
		<div class="panel radius">
			<form {{action 'create' on='submit'}}>
				<div class="row">
					{{input type='text' placeholder='Titel' value=title class='radius' autofocus=true}}
				</div>
				<div class="row">
					{{input type='text' placeholder='ISBN' value=isbn class=(if isbnValid 'radius' 'radius error')}}
					{{#unless isbnValid}}
					<small class="error">Muss eine 13-stellige Zahl sein</small>
					{{/unless}}
				</div>
				<div class="row">
					{{input type='text' placeholder='Jahrgangsstufen' value=form class=(if formValid 'radius' 'radius error')}}
					{{#unless formValid}}
					<small class="error">Muss eine durch Leerzeichen getrennte Liste von Zahlen sein</small>
					{{/unless}}
				</div>
				<div class="row">
					{{input type='submit' value='Erstellen' class=(if valid 'button radius' 'button radius disabled')}}
					{{#unless valid}}
					<small class="error">Ung&uuml;ltige Angaben</small>
					{{/unless}}
				</div>
			</form>
		</div>
	</div>
</div>
